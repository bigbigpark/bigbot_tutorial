<launch>
  <arg name="ns" default="bigbot" />
  <arg name="config" default="base" />
  <arg name="config_id" default="0"/>
  <arg name="rate" default="50"/>

  <param name="/$(arg ns)/robot_description"
         command="$(find jackal_description)/scripts/env_run
                    $(find bigbot_tutorial)/urdf/configs/$(arg config)
                    $(find xacro)/xacro '$(find bigbot_tutorial)/urdf/jackal.urdf.xacro'
                    'namespace:=$(arg ns)' 'config_id:=$(arg config_id)'"/>

  <!-- robot_state_publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" ns="$(arg ns)" >
    <param name="tf_prefix"         value="$(arg ns)"/>
    <param name="robot_description" value="/$(arg ns)/robot_description"/>
  </node>

  <!-- static_transform_publisher x y z qx qy qz qw frame_id child_frame_id  period_in_ms -->
  <node pkg="tf" type="static_transform_publisher" name="$(arg ns)_tf_static_publihser" args="0 0 0 0 0 0 1 map $(arg ns)/odom 100" >

  </node>

  <!-- joint_state_publisher -->
  <!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" ns="$(arg ns)" >
    <param name="publish_frequency" value="$(arg rate)"/>
  </node> -->

</launch>