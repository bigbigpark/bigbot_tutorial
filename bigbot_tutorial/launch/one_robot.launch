<?xml version='1.0'?>
<launch>
  <arg name="robot_name" default="mobile_base"/>
  <arg name="init_pose" default="-x 0 -y 0 -z 5"/>

  <param name="robot_description"
  command="rosrun xacro xacro $(find rosbot_description)/urdf/rosbot.xacro"/> 
  
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_rosbot_$(arg robot_name)"  
    args="$(arg init_pose) -urdf -param robot_description -model $(arg robot_name) -robot_namespace $(arg robot_name)"  
    respawn="false" output="screen">
  </node>
    
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen"/>

</launch>